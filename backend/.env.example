# =============================================================================
# IPA Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values.
# =============================================================================

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ipa_platform
DB_USER=ipa_user
DB_PASSWORD=ipa_password

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# RabbitMQ Configuration
# ===========================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ===========================================
# Azure OpenAI Configuration
# ===========================================
AZURE_OPENAI_ENDPOINT=https://<resource>.openai.azure.com/
AZURE_OPENAI_API_KEY=<your-api-key>
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5.2
AZURE_OPENAI_API_VERSION=2024-10-01-preview

# ===========================================
# Anthropic (Claude) Configuration
# Required for mem0 memory extraction
# ===========================================
ANTHROPIC_API_KEY=<your-anthropic-api-key>

# ===========================================
# OpenAI Configuration
# Required for mem0 embeddings
# ===========================================
OPENAI_API_KEY=<your-openai-api-key>

# ===========================================
# mem0 Long-term Memory Configuration
# ===========================================
# Enable/disable mem0 memory system
MEM0_ENABLED=true

# Qdrant vector storage path (local file system)
QDRANT_PATH=/data/mem0/qdrant

# Qdrant collection name
QDRANT_COLLECTION=ipa_memories

# Embedding model for vector generation
EMBEDDING_MODEL=text-embedding-3-small

# LLM provider for memory extraction (anthropic or openai)
MEMORY_LLM_PROVIDER=anthropic

# LLM model for memory extraction
MEMORY_LLM_MODEL=claude-sonnet-4-20250514

# Working memory TTL in seconds (default: 30 minutes)
WORKING_MEMORY_TTL=1800

# Session memory TTL in seconds (default: 7 days)
SESSION_MEMORY_TTL=604800

# ===========================================
# Security Configuration
# ===========================================
SECRET_KEY=<your-secret-key>
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# Development Configuration
# ===========================================
DEBUG=false
RELOAD=true
